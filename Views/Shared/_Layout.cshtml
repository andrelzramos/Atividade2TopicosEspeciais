<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Atividade2TopicosEspeciais</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Atividade2TopicosEspeciais.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/estilo.css" />
</head>
<body>
    <header id="cabecalho" style=" background-color: #B0E0E6">
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="background-color: #B0E0E6">
            <div class="container-fluid" style="background-color: #B0E0E6;" >
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Atividade2TopicosEspeciais</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="background-color: #B0E0E6;">
                    <ul class="navbar-nav flex-grow-1" style="background-color: #B0E0E6">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Pagina1">Pagina 1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Pagina2">Pagina 2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Pagina3">Pagina 3</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #B0E0E6">

        <div class="container">
            &copy; 2023 - Atividade2TopicosEspeciais <br />
            <strong>
                André Luiz Ramos RGM:31607932
                Matheus Ferrari Camilo Garcia RGM:30362598
                Rogério Rabello Barardi RGM:31432077
            </strong>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
